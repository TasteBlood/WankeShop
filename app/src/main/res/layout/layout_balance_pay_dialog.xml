<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="utils"
            type="com.cloudcreativity.wankeshop.utils.BalancePayDialogUtils" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dip"
        android:orientation="vertical">
        <ImageButton
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_black_24dp"
            android:onClick="@{(view)->utils.close(view)}"
            android:background="@null"
            android:padding="5dip"
            android:layout_gravity="end"/>
        <TextView
            android:layout_marginTop="5dip"
            android:id="@+id/tv_hints"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:gravity="bottom"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_sms"
                android:inputType="number"
                android:layout_width="0dip"
                android:hint="@string/str_register_hint_input_code"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_input_bottom_line"
                android:padding="10dip"
                android:layout_weight="3"/>
            <TextView
                android:id="@+id/tv_sendAgain"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dip"
                android:text="重新发送"
                android:onClick="@{(view)->utils.onReSendClick(view)}"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/ripple_red_btn_3corner"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/ripple_red_btn_3corner"
            android:textColor="@color/white"
            android:onClick="@{(view)->utils.onOkClick(view)}"
            android:text="确定"/>
    </LinearLayout>
</layout>