<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="loginModal"
            type="com.cloudcreativity.wankeshop.loginAndRegister.LoginModal" />
    </data>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar"
            android:elevation="3dip"
            android:background="@color/colorPrimary">
            <TextView
                android:textSize="@dimen/action_bar_font_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:text="@string/str_login"/>
            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:onClick="@{(view)->loginModal.onBackClick(view)}"
                android:src="@drawable/ic_arrow_back_white_24dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dip"
            android:orientation="vertical">
                <EditText
                    android:id="@+id/et_loginPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_717171"
                    android:hint="@string/str_hint_input_mobile"
                    android:inputType="phone"
                    android:padding="7dp"
                    android:textSize="14sp"
                    android:background="@drawable/shape_input_bottom_line" />
                <EditText
                    android:id="@+id/et_loginPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/str_hint_input_pwd"
                    android:textSize="14sp"
                    android:layout_marginTop="15dip"
                    android:inputType="textPassword"
                    android:textColor="@color/gray_717171"
                    android:padding="7dp"
                    android:background="@drawable/shape_input_bottom_line" />
            <android.support.v7.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_red_btn_3corner"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:onClick="@{(view)->loginModal.loginClick(view)}"
                android:text="@string/str_login"/>
            <FrameLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_register_new_account"
                    android:textColor="@color/gray_717171"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:layout_gravity="start|center_vertical"
                    android:onClick="@{(view)->loginModal.registerClick(view)}"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_forget_pwd_ask"
                    android:textColor="@color/gray_717171"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:layout_gravity="end|center_vertical"
                    android:onClick="@{(view)->loginModal.forgetClick(view)}"
                    />
            </FrameLayout>
        </LinearLayout>
        <!--微信登录-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <View
                android:layout_width="100dip"
                android:layout_height="1px"
                android:background="@color/gray_919191"/>
            <LinearLayout
                android:onClick="@{(view)->loginModal.onWeChatLoginClick(view)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="5dip"
                android:orientation="vertical">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_thirdparty_wechat"/>
                <TextView
                    android:layout_marginTop="5dip"
                    android:textColor="@color/gray_717171"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信登录"/>
            </LinearLayout>
            <View
                android:layout_width="100dip"
                android:layout_height="1px"
                android:background="@color/gray_919191"/>
        </LinearLayout>
    </android.support.v7.widget.LinearLayoutCompat>
</layout>
