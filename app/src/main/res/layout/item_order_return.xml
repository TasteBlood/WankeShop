<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.cloudcreativity.wankeshop.entity.ReturnOrderEntity" />
        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <!--这是顶部状态区域-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_717171"
                    android:textSize="14sp"
                    android:text="订单号:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_717171"
                    android:textSize="14sp"
                    android:text="@{item.returnNum}"/>
            </LinearLayout>
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:layout_marginStart="10dip"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:src="@mipmap/ic_address_delete"/>
            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@{item.returnState==3?@string/str_complete:@string/str_returning}"/>
        </RelativeLayout>
        <View style="@style/myDividerForItemGrayLine" />
        <!--这是内容区域-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dip">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_goodsPic"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:scaleType="centerCrop"
                app:shopItemPic="@{item.order.shoppingCart.sku.icon}" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dip"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:text="@{item.order.shoppingCart.sku.skuName}"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_numberAndPrice"
                        android:textColor="@color/gray_717171"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="@string/str_number_unit_price"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View style="@style/myDividerForItemGrayLine" />
        <!--这是退款相关内容-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_returnNum"
                android:textColor="@color/gray_717171"
                android:textSize="14sp"
                android:text="退货数量:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dip"
                android:textSize="14sp"
                android:text="@{String.valueOf(item.skuNum)}"/>
            <TextView
                android:layout_marginStart="50dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_returnMoney"
                android:textColor="@color/gray_717171"
                android:textSize="14sp"
                android:text="该退款:￥"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dip"
                android:textSize="14sp"
                android:text="@{String.valueOf(item.returnMoney)}"/>
        </LinearLayout>
        <View style="@style/myDividerForItemGrayLine" />
        <!--这是按钮操作区域-->
        <LinearLayout
            android:id="@+id/layout_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end|center_vertical"
            android:visibility="@{item.returnState!=3?View.VISIBLE:View.GONE}"
            android:padding="10dip">
            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_gray_circle_bg"
                android:textColor="@color/gray_717171"
                android:paddingTop="3dip"
                android:paddingBottom="3dip"
                android:paddingStart="5dip"
                android:paddingEnd="5dip"
                android:textSize="14sp"
                android:text="@string/str_context_seller"/>
        </LinearLayout>
    </LinearLayout>
</layout>