<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.cloudcreativity.wankeshop.entity.ShopCarItemEntity" />
        <import type="android.text.TextUtils" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="10dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_717171"
                android:text="商品编号:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_717171"
                android:text="@{item.sku.skuCode}" />
        </LinearLayout>
        <View style="@style/myDividerForItemGrayLine" />
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_shopCar_itemCheck"
                android:button="@drawable/selector_shopping_car_item"
                android:checked="@{item.isCheck}"
                android:padding="5dip"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginStart="5dip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_shopCar_pic"
                    app:shopItemPic="@{TextUtils.isEmpty(item.sku.icon)?item.spu.spuPic:item.sku.icon}"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="5dip"
                    android:background="@drawable/bg_goods_pic_border"
                    android:layout_width="80dip"
                    android:layout_height="80dip" />
                <RelativeLayout
                    android:layout_marginStart="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_shopCar_name"
                        android:layout_gravity="top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:textSize="14sp"
                        android:text="@{item.sku.skuName}" />
                    <!--<TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:textColor="@color/gray_717171"
                        android:textSize="10sp"
                        android:text="机身颜色:黑色 内存：32G 运行内存 4G"/>-->
                    <FrameLayout
                        android:layout_marginTop="10dip"
                        android:layout_gravity="bottom"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_shopCar_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|start"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"
                            android:text="￥2000.00"/>
                        <LinearLayout
                            android:layout_gravity="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_rect_red_1dip"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_numMinus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="8dip"
                                android:paddingEnd="8dip"
                                android:paddingTop="5dip"
                                android:paddingBottom="5dip"
                                android:textColor="@color/colorPrimary"
                                android:text="—"/>
                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimary"/>
                            <EditText
                                android:id="@+id/tv_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:editable="false"
                                android:hint="数量"
                                android:text="@{String.valueOf(item.num)}"
                                android:padding="5dip"
                                android:gravity="center"
                                android:textColor="@color/gray_717171"
                                android:maxLength="4"
                                android:ems="4"/>
                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimary"/>
                            <TextView
                                android:id="@+id/tv_numPlus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:paddingStart="6dip"
                                android:paddingEnd="6dip"
                                android:paddingTop="5dip"
                                android:paddingBottom="5dip"
                                android:text=" + "/>
                        </LinearLayout>
                    </FrameLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_notBuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="5dip"
            android:visibility="gone"
            android:text="该商品暂时无法购买"/>
        <TextView
            android:id="@+id/tv_notEnough"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="5dip"
            android:visibility="gone"
            android:text="库存不足，请调整数量"/>
    </LinearLayout>

</layout>