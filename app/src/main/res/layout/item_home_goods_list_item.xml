<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="goodsItem"
            type="com.cloudcreativity.wankeshop.entity.GoodsEntity" />
    </data>
    <android.support.v7.widget.CardView
        android:elevation="3dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_goodsImage"
                    android:layout_width="match_parent"
                    android:layout_height="140dip"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/start_index"
                    bind:homeGoodsPic = "@{goodsItem.spuPic}" />
                <TextView
                    android:id="@+id/tv_goodsName"
                    android:layout_marginTop="5dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dip"
                    android:layout_marginEnd="5dip"
                    android:text="@{goodsItem.spuName}"
                    android:lines="1"
                    android:gravity="left"
                    android:textColor="@color/gray_717171"
                    android:textSize="14sp"
                    android:ellipsize="end"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:layout_marginTop="5dip"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_goodsPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:text="@{goodsItem.formatPrice()}"
                        android:textColor="@color/colorPrimary"
                        />
                    <TextView
                        android:id="@+id/tv_goodsSaleNum"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="13sp"
                        android:layout_height="wrap_content"
                        android:text="@{goodsItem.formatSaleNum()}"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>
            </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>