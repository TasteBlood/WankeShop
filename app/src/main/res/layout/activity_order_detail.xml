<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="detailModal"
            type="com.cloudcreativity.wankeshop.order.OrderDetailViewModal" />
        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--这是title-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar"
            android:elevation="3dip"
            android:background="@color/colorPrimary">
            <TextView
                android:textSize="@dimen/action_bar_font_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:text="@string/str_order_detail"/>
            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:onClick="@{(view)->detailModal.onBack(view)}"
                android:src="@drawable/ic_arrow_back_white_24dp"/>
        </RelativeLayout>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--这是订单状态-->
                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:textSize="20sp"
                    android:background="@color/white"
                    android:text="@{detailModal.orderState.get()}"/>

                <!--这是地址信息-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货地址信息"
                    android:textColor="@color/gray_717171"
                    android:layout_margin="10dip"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dip"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="@{detailModal.name.get()}"/>
                        <TextView
                            android:id="@+id/tv_phone"
                            android:textSize="16sp"
                            android:layout_marginStart="20dip"
                            android:layout_toEndOf="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{detailModal.phone.get()}"/>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_717171"
                        android:layout_marginTop="10dip"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="14sp"
                        android:text="@{detailModal.address.get()}"/>
                </LinearLayout>

                <!--这是商品信息-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品信息"
                    android:textColor="@color/gray_717171"
                    android:layout_margin="10dip"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rcv_order_goods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adapter="@{detailModal.adapter}"
                        android:scrollbars="none"/>
                </LinearLayout>

                <!--这是订单赠品信息-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赠品信息"
                    android:visibility="@{detailModal.hasGift.get()?View.VISIBLE:View.GONE}"
                    android:textColor="@color/gray_717171"
                    android:layout_margin="10dip"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:visibility="@{detailModal.hasGift.get()?View.VISIBLE:View.GONE}"
                    android:padding="10dip"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_pic"
                        android:background="@drawable/bg_goods_pic_border"
                        android:scaleType="centerCrop"
                        android:layout_width="60dip"
                        android:layout_height="60dip" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dip"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_giftName"
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:textColor="@color/gray_717171"
                            android:layout_weight="2" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:gravity="bottom"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/gray_919191"
                                android:text="@string/str_number"/>
                            <TextView
                                android:id="@+id/tv_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/gray_717171"
                                android:layout_marginStart="10dip" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!--这是订单信息-->
                <LinearLayout
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:background="@color/white"
                        android:padding="10dip"
                        android:visibility="@{detailModal.returnOrderNum.get()==null?View.GONE:View.VISIBLE}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:textSize="14sp"
                            android:text="退货单号"/>
                        <TextView
                            android:id="@+id/tv_returnOrderNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/gray_717171"
                            android:layout_gravity="center_vertical|end"
                            android:text="@{detailModal.returnOrderNum.get()}"/>
                    </FrameLayout>

                    <FrameLayout
                        android:background="@color/white"
                        android:padding="10dip"
                        android:layout_marginTop="1dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:textSize="14sp"
                            android:text="订单号"/>
                        <TextView
                            android:id="@+id/tv_orderNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/gray_717171"
                            android:layout_gravity="center_vertical|end"
                            android:text="@{detailModal.orderNumber.get()}"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_marginTop="1dip"
                        android:background="@color/white"
                        android:padding="10dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|start"
                                android:textSize="14sp"
                                android:text="下单时间"/>
                            <TextView
                                android:id="@+id/tv_orderDate"
                                android:textColor="@color/gray_717171"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:layout_gravity="center_vertical|end"
                                android:text="@{detailModal.orderDate.get()}"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_marginTop="1dip"
                        android:background="@color/white"
                        android:padding="10dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:textSize="14sp"
                            android:text="支付方式"/>
                        <TextView
                            android:id="@+id/tv_orderPayWay"
                            android:textColor="@color/gray_717171"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:textSize="14sp"
                            android:text="@{detailModal.orderPyWay.get()}"/>
                    </FrameLayout>
                </LinearLayout>

                <!--这是订单金额信息-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:orientation="vertical">
                    <!--这是金额-->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="10dip">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:textSize="14sp"
                            android:text="订单总额"/>
                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_717171"
                            android:textSize="14sp"
                            android:layout_gravity="center_vertical|end"
                            android:text="@{detailModal.money.get()}" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_marginTop="1dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end|center_vertical"
                        android:padding="10dip">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="实付款:"/>
                        <TextView
                            android:id="@+id/tv_totalMoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{detailModal.money.get()}"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <!--这是按钮区域-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/gray_d1d1d1"/>
        <LinearLayout
            android:padding="10dip"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:paddingStart="10dip"
                android:paddingEnd="10dip"
                android:visibility="gone"
                android:onClick="@{(view)->detailModal.onDeleteClick(view)}"
                android:background="@drawable/shape_gray_circle_bg"
                android:textColor="@color/gray_717171"
                android:text="@string/str_delete_order"/>
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:visibility="gone"
                android:paddingBottom="5dip"
                android:paddingStart="10dip"
                android:paddingEnd="10dip"
                android:onClick="@{(view)->detailModal.onCancelClick(view)}"
                android:layout_marginStart="10dip"
                android:background="@drawable/shape_gray_circle_bg"
                android:textColor="@color/gray_717171"
                android:text="@string/str_cancel_order"/>
            <TextView
                android:id="@+id/tv_applyReturnMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:visibility="gone"
                android:paddingBottom="5dip"
                android:paddingStart="10dip"
                android:paddingEnd="10dip"
                android:onClick="@{(view)->detailModal.onApplyReturnMoneyClick(view)}"
                android:layout_marginStart="10dip"
                android:background="@drawable/shape_gray_circle_bg"
                android:textColor="@color/gray_717171"
                android:text="@string/str_apply_back_money"/>
            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:paddingStart="10dip"
                android:paddingEnd="10dip"
                android:layout_marginStart="10dip"
                android:onClick="@{(view)->detailModal.onContactSellerClick(view)}"
                android:background="@drawable/shape_gray_circle_bg"
                android:textColor="@color/gray_717171"
                android:text="@string/str_context_seller"/>
            <TextView
                android:id="@+id/tv_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:paddingStart="10dip"
                android:paddingEnd="10dip"
                android:layout_marginStart="10dip"
                android:onClick="@{(view)->detailModal.onReturnClick(view)}"
                android:background="@drawable/shape_gray_circle_bg"
                android:textColor="@color/gray_717171"
                android:text="@string/str_return_goods"/>
            <TextView
                android:id="@+id/tv_delay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:paddingStart="10dip"
                android:paddingEnd="10dip"
                android:layout_marginStart="10dip"
                android:onClick="@{(view)->detailModal.onDelayClick(view)}"
                android:background="@drawable/shape_gray_circle_bg"
                android:textColor="@color/gray_717171"
                android:text="@string/str_delay_receive"/>
            <TextView
                android:id="@+id/tv_enterReceive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:paddingStart="10dip"
                android:paddingEnd="10dip"
                android:layout_marginStart="10dip"
                android:onClick="@{(view)->detailModal.onEnterReceiveClick(view)}"
                android:background="@drawable/shape_red_circle_bg"
                android:textColor="@color/colorPrimary"
                android:text="@string/str_enter_receive"/>
            <TextView
                android:id="@+id/tv_reBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:paddingStart="10dip"
                android:paddingEnd="10dip"
                android:visibility="gone"
                android:layout_marginStart="10dip"
                android:onClick="@{(view)->detailModal.onReBuyClick(view)}"
                android:background="@drawable/shape_red_circle_bg"
                android:textColor="@color/colorPrimary"
                android:text="@string/str_re_buy"/>
            <TextView
                android:id="@+id/tv_goPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:paddingStart="10dip"
                android:layout_marginStart="10dip"
                android:paddingEnd="10dip"
                android:visibility="gone"
                android:background="@drawable/shape_red_circle_bg"
                android:textColor="@color/colorPrimary"
                android:onClick="@{(view)->detailModal.onPayClick(view)}"
                android:text="@string/str_go_pay"/>
        </LinearLayout>
    </LinearLayout>
</layout>