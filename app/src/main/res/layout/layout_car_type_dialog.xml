<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="utils"
            type="com.cloudcreativity.wankeshop.utils.CarTypeDialogUtils" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:padding="20dip"
        android:background="@drawable/shape_3corner_white_bg"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="车辆类型"
            android:textSize="14sp"
            android:textColor="@color/gray_717171"/>
        <GridView
            android:layout_marginTop="20dip"
            android:id="@+id/gvCarTypeDialog"
            android:adapter="@{utils.adapter}"
            android:numColumns="2"
            android:scrollbars="none"
            android:listSelector="@null"
            android:verticalSpacing="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>