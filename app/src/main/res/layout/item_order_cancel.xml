<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.cloudcreativity.wankeshop.entity.BigOrderEntity" />
        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <!--这是顶部状态区域-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:padding="10dip"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="已取消"/>
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ic_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dip"
                android:layout_gravity="end|center_vertical"
                android:src="@mipmap/ic_address_delete"/>
        </FrameLayout>
        <View style="@style/myDividerForItemGrayLine" />
        <!--这是内容区域-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--这是多个的内容，显示图片-->
            <LinearLayout
                android:id="@+id/layout_multi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:padding="10dip">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_order_item_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:orientation="horizontal"/>
            </LinearLayout>
            <!--这是单个的内容，展示详细信息-->
            <LinearLayout
                android:id="@+id/layout_single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_goodsPic"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:scaleType="centerCrop"
                    app:shopItemPic="@{item.data[0].shoppingCart.sku.icon}" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dip"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textSize="14sp"
                        android:ellipsize="end" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:paddingEnd="10dip"
            android:paddingBottom="10dip"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_numberAndPrice"
                android:textColor="@color/gray_717171"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/str_number_unit_price"/>
        </LinearLayout>
        <!--这是按钮操作区域-->
        <View style="@style/myDividerForItemGrayLine" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end|center_vertical"
            android:padding="10dip">
            <TextView
                android:id="@+id/tv_reBuy"
                android:layout_marginStart="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_red_circle_bg"
                android:textColor="@color/colorPrimary"
                android:paddingTop="3dip"
                android:paddingBottom="3dip"
                android:paddingStart="5dip"
                android:paddingEnd="5dip"
                android:textSize="14sp"
                android:text="@string/str_re_buy"/>
        </LinearLayout>
    </LinearLayout>
</layout>